<Window x:Class="BomBom_Kiosk.View.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BomBom_Kiosk.View"
        xmlns:control="clr-namespace:BomBom_Kiosk.Control.Payment"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="PaymentWindow" Height="450" Width="800">
    <Grid>
        <control:ChoosePaymentControl Visibility="Collapsed" x:Name="choosePaymentControl"/>
        <control:ChoosePlaceControl x:Name="choosePlaceControl"/>
        <control:InShopControl x:Name="inShopControl"/>
        <control:PaymentByCardControl x:Name="paymentByCardControl"/>
        <control:PaymentByCashControl x:Name="paymentByCashControl"/>
        <control:PaymentResultControl x:Name="paymentByResultControl"/>
    </Grid>
</Window>