<Application x:Class="BomBom_Kiosk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BomBom_Kiosk"
             xmlns:cvts="clr-namespace:BomBom_Kiosk.Converter"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <cvts:PriceToStringConverter x:Key="PriceToString"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Theme/Button.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
